<div class="container">
<center>
<h1>Tasks#index</h1>
<% @tasks.each do |task| %>
  <h2> <%= link_to task.title, task_path(task) %> </h2>
  <p><%= task.completed ? "Completed" : "Not completed" %></p>
  <%= link_to "Show more details", task_path(task) %>
  <%= link_to "Edit the task", edit_task_path(task) %>
  <%= link_to "Delete the task", task_path(task), method: :delete %>
<% end %>

<%= link_to "Create a new task", new_task_path %>
</center>
</div>
